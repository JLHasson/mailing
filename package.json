{
  "name": "mailing",
  "version": "0.1.0",
  "description": "Fun email development environment",
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./components": "./lib/components/index.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ],
      "components": [
        "./lib/components/index.d.ts"
      ]
    }
  },
  "bin": {
    "mailing": "./lib/cli/index.js",
    "mm": "./lib/cli/index.js"
  },
  "scripts": {
    "build": "echo 'Building mailing' && tsc -p tsconfig.json && cp -R src/cli/generator_templates lib/cli && chmod +x lib/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf ./lib && rm -rf ./src/emails",
    "prepublish": "npm run build",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psugihara/reaction-mailer.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psugihara/reaction-mailer/issues"
  },
  "homepage": "https://github.com/psugihara/reaction-mailer#readme",
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/mjml-react": "^2.0.4",
    "@types/node": "^17.0.24",
    "@types/nodemailer": "^6.4.4",
    "@types/prompts": "^2.0.14",
    "@types/react": "^18.0.5",
    "@types/webpack-env": "^1.16.4",
    "@types/yargs": "^17.0.10",
    "eslint": "^8.13.0",
    "jest": "^27.5.1",
    "next": "^12.1.5",
    "npm-watch": "^0.11.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^10.1.0",
    "mjml": "^4.12.0",
    "mjml-react": "^2.0.7",
    "nodemailer": "^6.7.3",
    "open": "^8.4.0",
    "prompts": "^2.4.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.7.0",
    "yargs": "^17.4.1"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx"
    }
  }
}
